<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Update Clothes</title>
    <link rel="stylesheet" href="/all.css" />
    <link rel="stylesheet" href="/update.css" />
  </head>
  <body>
    <div class="container">
      <h1>Update Clothes</h1>

      <form action="/clothes/update/<%= clothing._id %>" method="POST">
        <div class="form-group">
          <label for="Name">Name:</label>
          <input
            type="text"
            id="Name"
            name="Name"
            value="<%= clothing.Name %>"
            required
          />
        </div>
        <div class="form-group">
          <label for="Description">Description:</label>
          <textarea id="Description" name="Description" required>
        <%= clothing.Description %></textarea
          >
        </div>
        <div class="form-group">
          <label for="Price">Price:</label>
          <input
            type="number"
            id="Price"
            name="Price"
            value="<%= clothing.Price %>"
            required
          />
        </div>
        <div class="form-group">
          <label for="Stock">Stock:</label>
          <input
            type="number"
            id="Stock"
            name="Stock"
            value="<%= clothing.Stock %>"
            required
          />
        </div>
        <div class="form-group">
          <label for="Sizes">Sizes (separate by comma):</label>
          <input
            type="text"
            id="Sizes"
            name="Sizes"
            value="<%= clothing.Sizes.join(', ') %>"
            required
          />
        </div>
        <div class="form-group">
          <label for="Colors">Colors (separate by comma):</label>
          <input
            type="text"
            id="Colors"
            name="Colors"
            value="<%= clothing.Colors.join(', ') %>"
            required
          />
        </div>
        <button type="submit">Update</button>
      </form>
    </div>
  </body>
</html>
